@model IEnumerable<Cafeteria.Web.Models.Dish>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Dish List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fa-solid fa-plus"></i>&nbsp Create new Dish
            </a>
        </div>

        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Short description</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="30%">@obj.Name</td>
                            <td width="20%">@obj.Category?.Name</td>
                            <td width="20%">@obj.ShortDescription</td>
                            <td width="10%">@obj.Price</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a class="btn btn-primary mx-2" asp-route-id="@obj.Id" asp-action="Edit">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn btn-danger mx-2" asp-route-id="@obj.Id" asp-action="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p> No dish exists.</p>
        }
    </div>
</div>
